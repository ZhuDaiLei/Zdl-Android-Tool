<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- DrawableBg的属性开始 -->
    <attr name="isGradient" format="boolean" />

    <attr name="shape" format="enum">
        <enum name="RECTANGLE" value="0" />
        <enum name="OVAL" value="1" />
        <enum name="LINE" value="2" />
        <enum name="RING" value="3" />
    </attr>
    <attr name="fillColor" format="color" />
    <attr name="strokeColor" format="color" />
    <attr name="strokeWidth" format="dimension" />
    <attr name="dashWidth" format="dimension" />
    <attr name="dashGap" format="dimension" />
    <attr name="topLeftRadius" format="dimension" />
    <attr name="topRightRadius" format="dimension" />
    <attr name="bottomLeftRadius" format="dimension" />
    <attr name="bottomRightRadius" format="dimension" />
    <attr name="radius" format="dimension" />

    <!--gradientType = RING时特有的属性-->
    <!--    <attr name="innerRadius" format="dimension" />-->
    <!--    <attr name="innerRadiusRatio" format="dimension" />-->
    <!--    <attr name="thickness" format="dimension" />-->
    <!--    <attr name="thicknessRatio" format="dimension" />-->

    <!--渐变色时设置的属性-->
    <attr name="startColor" format="color" />
    <attr name="centerColor" format="color" />
    <attr name="endColor" format="color" />
    <attr name="gradientType" format="enum">
        <enum name="LINEAR_GRADIENT" value="0" />
        <enum name="RADIAL_GRADIENT" value="1" />
        <enum name="SWEEP_GRADIENT" value="2" />
    </attr>
    <attr name="orientation" format="enum">
        <enum name="TOP_BOTTOM" value="0" />
        <enum name="TR_BL" value="1" />
        <enum name="RIGHT_LEFT" value="2" />
        <enum name="BR_TL" value="3" />
        <enum name="BOTTOM_TOP" value="4" />
        <enum name="BL_TR" value="5" />
        <enum name="LEFT_RIGHT" value="6" />
        <enum name="TL_BR" value="7" />
    </attr>
    <attr name="gradientRadius" format="dimension" />

    <declare-styleable name="DrawableBgRelativeLayout">

        <attr name="isGradient" />

        <attr name="shape" />
        <attr name="fillColor" />
        <attr name="strokeColor" />
        <attr name="strokeWidth" />
        <attr name="dashWidth" />
        <attr name="dashGap" />
        <attr name="topLeftRadius" />
        <attr name="topRightRadius" />
        <attr name="bottomLeftRadius" />
        <attr name="bottomRightRadius" />
        <attr name="radius" />

        <!--gradientType = RING时特有的属性-->
        <!--        <attr name="innerRadius"/>-->
        <!--        <attr name="innerRadiusRatio"/>-->
        <!--        <attr name="thickness"/>-->
        <!--        <attr name="thicknessRatio"/>-->

        <!--渐变色时设置的属性-->
        <attr name="startColor" />
        <attr name="centerColor" />
        <attr name="endColor" />
        <attr name="gradientType" />
        <attr name="orientation" />
        <attr name="gradientRadius" />
    </declare-styleable>

    <declare-styleable name="DrawableBgLinearLayout">

        <attr name="isGradient" />

        <attr name="shape" />
        <attr name="fillColor" />
        <attr name="strokeColor" />
        <attr name="strokeWidth" />
        <attr name="dashWidth" />
        <attr name="dashGap" />
        <attr name="topLeftRadius" />
        <attr name="topRightRadius" />
        <attr name="bottomLeftRadius" />
        <attr name="bottomRightRadius" />
        <attr name="radius" />

        <!--gradientType = RING时特有的属性-->
        <!--        <attr name="innerRadius"/>-->
        <!--        <attr name="innerRadiusRatio"/>-->
        <!--        <attr name="thickness"/>-->
        <!--        <attr name="thicknessRatio"/>-->

        <!--渐变色时设置的属性-->
        <attr name="startColor" />
        <attr name="centerColor" />
        <attr name="endColor" />
        <attr name="gradientType" />
        <attr name="orientation" />
        <attr name="gradientRadius" />
    </declare-styleable>
    <!-- DrawableBg的属性结束 -->
</resources>